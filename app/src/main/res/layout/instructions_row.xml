<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_margin="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/instructions_steps_tv_row"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:text="STEP:"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="STEP" />

        <View
            android:id="@+id/view1"
            android:layout_width="76dp"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"

            android:layout_marginEnd="8dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/instructions_steps_tv_row"
            app:layout_constraintEnd_toEndOf="@+id/instructions_tv_row"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/instructions_steps_tv_row"
            app:layout_constraintTop_toTopOf="@+id/instructions_steps_tv_row"
            app:layout_constraintVertical_bias="0.742" />

        <TextView
            android:id="@+id/instructions_tv_row"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"

            android:layout_marginStart="4dp"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/instructions_steps_tv_row"
            app:layout_constraintStart_toEndOf="@+id/instructions_steps_tv_row"
            app:layout_constraintTop_toTopOf="@+id/instructions_steps_tv_row"
            tools:text="##" />

        <TextView
            android:id="@+id/instructions_shortdescription_tv_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/instructions_steps_tv_row"
            app:layout_constraintTop_toBottomOf="@+id/instructions_steps_tv_row"
            tools:text="Recipe Inroductions" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>